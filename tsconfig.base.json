{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pet-donations/api/crowdfunding": ["libs/api/crowdfunding/src/index.ts"],
      "@pet-donations/api/kennel": ["libs/api/kennel/src/index.ts"],
      "@pet-donations/api/news": ["libs/api/news/src/index.ts"],
      "@pet-donations/api/user": ["libs/api/user/src/index.ts"],
      "@pet-donations/interfaces": ["libs/interfaces/src/index.ts"],
      "@pet-donations/typeorm": ["libs/typeorm/src/index.ts"],
      "@pet-donations/web-kennel-info": ["libs/web/kennel-info/src/index.ts"],
      "@pet-donations/web/content": ["libs/web/content/src/index.ts"],
      "@pet-donations/web/crowdfunding": ["libs/web/crowdfunding/src/index.ts"],
      "@pet-donations/web/endpoints": ["libs/web/endpoints/src/index.ts"],
      "@pet-donations/web/news": ["libs/web/news/src/index.ts"],
      "@pet-donations/web/user": ["libs/web/user/src/index.ts"],
      "@pet-donations/web/user-profile": ["libs/web/user-profile/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
